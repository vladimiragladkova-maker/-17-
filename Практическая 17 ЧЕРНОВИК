#include <iostream>
#include <conio.h>
using namespace std;
int main() {
	setlocale(0, "");
	int number;
	string material;
	int gorizontalnaya_verticalnaya;
	int zapolnenniy_pustoy;
	int lenght;
	int size;
	int shirina;
	int visota;
	int j = 1;
	int i = 1;
	cout << "[ + ] Программа - “Геометрические фигуры”" << endl << endl << "[ 1 ] Линия" << endl << "[ 2 ] Квадрат" << endl << "[ 3 ] Прямоугольник" << endl << "[ 4 ] Треугольник" << endl << "[ 5 ] Решетка" << endl << endl << "[ 6 ] Крестик" << endl << "[+] Выберите фигуру : ";
	cin >> number;
	system("cls");
	if (number == 1)
	{
		cout << "[ + ] Фигура: “Линия”" << endl << endl << "[ 1 ] Горизонтальная" << endl << "[ 2 ] Вертикальная" << endl << "[ + ] Выберите тип: ";
		cin >> gorizontalnaya_verticalnaya;
		cout << "[ + ] Длина линии: ";
		cin >> lenght;
		cout << "[ + ] Текстура линии: ";
		cin >> material;
		cout << endl;
		system("cls");
		if (gorizontalnaya_verticalnaya == 1)
		{
			while (i <= lenght)
			{
				cout << material;
				i = i + 1;
			}
		}
		else if (gorizontalnaya_verticalnaya == 2)
		{
			while (i <= lenght)
			{
				cout << material << endl;
				i = i + 1;
			}
		}
		cout << endl;
	}
	else if (number == 2)
	{
		cout << "[ + ] Фигура: “Квадрат”" << endl << endl << "[ 1 ] Заполненный" << endl << "[ 2 ] Пустой" << endl << "[ + ] Выберите тип: ";
		cin >> zapolnenniy_pustoy;
		cout << "[ + ] Размер: ";
		cin >> size;
		cout << "[ + ] Текстура: ";
		cin >> material;
		cout << endl;
		system("cls");
		if (zapolnenniy_pustoy == 1)
		{
			while (j <= size)
			{
				i = 1;
				while (i <= size)
				{
					cout << material << " ";
					i = i + 1;
				}
				cout << endl;
				j = j + 1;
			}
		}
		else if (zapolnenniy_pustoy == 2)
		{
			while (j <= size)
			{
				i = 1;
				if (j == 1)
				{
					while (i <= size)
					{
						cout << material << " ";
						i = i + 1;
					}
				}
				else if (j == size)
				{
					while (i <= size)
					{
						cout << material << " ";
						i = i + 1;
					}
				}
				else if (size != 1)
				{
					i = 1;
					cout << material;
					while (i <= size * 2 - 3)
					{
						cout << " ";
						i = i + 1;
					}
					cout << material;
				}
				cout << endl;
				j = j + 1;
			}
		}
	}
	else if (number == 3)
	{
		cout << "[ + ] Фигура: “Прямоугольник”" << endl << endl << "[ 1 ] Заполненный" << endl << "[ 2 ] Пустой" << endl << "[ + ] Выберите тип: ";
		cin >> zapolnenniy_pustoy;
		cout << "[ + ] Ширина: ";
		cin >> shirina;
		cout << "[ + ] Высота: ";
		cin >> visota;
		cout << "[ + ] Текстура: ";
		cin >> material;
		cout << endl;
		system("cls");
		if (zapolnenniy_pustoy == 1)
		{
			while (j <= visota)
			{
				i = 1;
				while (i <= shirina)
				{
					cout << material << " ";
					i = i + 1;
				}
				cout << endl;
				j = j + 1;
			}
		}
		else if (zapolnenniy_pustoy == 2)
		{
			while (j <= visota)
			{
				i = 1;
				if (j == 1)
				{
					while (i <= shirina)
					{
						cout << material << " ";
						i = i + 1;
					}
				}
				else if (j == visota)
				{
					while (i <= shirina)
					{
						cout << material << " ";
						i = i + 1;
					}
				}
				else if (visota != 1)
				{
					i = 1;
					cout << material;
					while (i <= shirina * 2 - 3)
					{
						cout << " ";
						i = i + 1;
					}
					cout << material;
				}
				cout << endl;
				j = j + 1;
			}
		}
	}
	else if (number == 4)
	{
		cout << "[ + ] Фигура: “Треугольник”" << endl << endl << "[ 1 ] Заполненный" << endl << "[ 2 ] Пустой" << endl << "[ + ] Выберите тип: ";
		cin >> zapolnenniy_pustoy;
		cout << "[ + ] Размер: ";
		cin >> size;
		cout << "[ + ] Текстура: ";
		cin >> material;
		cout << endl;
		system("cls");
		if (zapolnenniy_pustoy == 1)
		{
			for (int z = 0; z < size; z++)
			{
				for (int g = 0; g < z; g++)
				{
					cout << material;
				}
				cout << endl;
			}
		}
		else if (zapolnenniy_pustoy == 2)
		{
			for (int y = 0; y < size; y++)
			{
				for (int x = 0; x < size; x++)
				{
					if (x == size / 2 - y || x == size / 2 + y || y == size / 2)
					{
						cout << material;
					}
					else
					{
						cout << " ";
					}
				}
				cout << endl;
			}
		}
	}
	else if (number == 5)
	{
		cout << "[ + ] Фигура: “Решетка”" << endl;
		cout << "[ + ] Размер: ";
		cin >> size;
		while (size % 2 == 0)
		{
			system("cls");
			cout << "Ошибка: введено четное число. Попробуйте ввести другое: ";
			cin >> size;
			system("cls");
			if (size / 2 != 0)
			{
				cout << "[ + ] Фигура: “Решетка”" << endl;
				cout << "[ + ] Размер: " << size << endl;
			}
		}
		cout << "[ + ] Текстура: ";
		cin >> material;
		cout << endl;
		system("cls");
		if (size / 2 != 0)
		{
			for (int x = 1; x < size + 1; x++)
			{
				if (x % 2 != 0)
				{
					for (int y = 0; y < (size - 1) / 2; y++)
					{
						cout << "   " << material;
					}
					cout << " ";
				}
				else
				{
					for (int y = 0; y < size; y++)
					{
						cout << " " << material;
					}
				}
				cout << endl;
			}
		}
	}
	else if (number == 6)
	{
		cout << "[ + ] Фигура: “Крестик”";
		cout << "[ + ] Размер: ";
		cin >> size;
		while (size % 2 == 0)
		{
			system("cls");
			cout << "Ошибка: введено четное число. Попробуйте ввести другое: ";
			cin >> size;
			system("cls");
			if (size / 2 != 0)
			{
				cout << "[ + ] Фигура: “Крестик”" << endl;
				cout << "[ + ] Размер: " << size << endl;
			}
		}
		cout << "[ + ] Текстура: ";
		cin >> material;
		cout << endl;
		system("cls");

		for (int y = 0; y < size; y++)
		{
			for (int x = 0; x < size; x++)
			{
				if (x == size / 2 - y)
				{
					cout << material;
				}
				else
				{
					cout << " ";
				}
			}
			cout << endl;
		}
		cout << endl;
		for (int y = 0; y < size; y++)
		{
			for (int x = 0; x < size; x++)
			{
				if (x == y - size / 2)
				{
					cout << material;
				}
				else
				{
					cout << " ";
				}
			}
			cout << endl;
		}
		for (int y = 0; y < size; y++)
		{
			for (int x = 0; x < size; x++)
			{
				if (x == size / 2 - y or (x == size / 2 + y and x != size / 2 - y))
				{
					cout << material;
				}
				else
				{
					cout << " ";
				}
			}
			cout << endl;
		}
	}
	return 0;
}
// Перевернутый треугольник:
for (int y = size - 1; y >= 0; y--)
{
    for (int x = 0; x < size; x++)
    {
        if (x == size / 2 - y || x == size / 2 + y || y == size / 2)
        {
            cout << material;
        }
        else
        {
            cout << " ";
        }
    }
    cout << endl;
}
cout << endl;
for (int y = size - 1; y >= 0; y--)
{
    for (int x = 0; x < size; x++)
    {
        // Условия для перевернутого треугольника
        if (x >= size - 1 - y && x <= y && y >= size / 2)
        {
            cout << material;
        }
        else
        {
            cout << " ";
        }
    }
    cout << endl;
}
